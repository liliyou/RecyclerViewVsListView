<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.lili.com.recyclerviewvslistview" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerView.RecyclerViewActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".recyclerView.RV1EditTextActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".recyclerView.RV2ScrollListenerActivity"
            android:screenOrientation="portrait"/>


        <activity
            android:name=".recyclerView.RV3ScrollButtonActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".listView.ListViewActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".listView.LV1EditTextActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".listView.LV3ScrollButtonActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
