<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/recycler_view"
        android:background="@android:color/darker_gray"/>
    <View

        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/txtNote"
        android:layout_toRightOf="@+id/line"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/txtNote"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:lineSpacingMultiplier="1.3"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/line" />
    <ScrollView

        android:id="@+id/Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line2"
        android:layout_toRightOf="@+id/line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnClearAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Clear All"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnAddFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Add first"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/btnAddLast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Add Last"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnRemoveFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Remove first"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnRemoveLast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Remove Last"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnNotifyDataSetChanged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="NotifyDataSetChanged"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/btnNotifyItemInserted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="NotifyItemInserted 0"
                android:textAllCaps="false"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/btnNotifyItemRemoved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="NotifyItemRemoved 0 "
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnNotifyItemRemovedBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="NotifyItemRemoved Bottom "
                android:textColor="@android:color/white"/>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                />

            <Button
                android:id="@+id/btnAddAndNotifyItemInserted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Add first And NotifyItemInserted"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnAddBottomAndNotifyItemInserted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Add Bottom And NotifyItemInserted"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnAddBottomAndNotifyDataSetChanged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Add Bottom And NotifyDataSetChanged"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnAddAndNotifyDataSetChanged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Add first And NotifyDataSetChanged"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnAddAndNotifyItemRangeChanged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Add first And NotifyItemRangeChanged"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/btnNotifyItemRangeRemoved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Add first And NotifyItemRangeRemoved"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnRemoveFirstNotifyItemRemoved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Remove First NotifyItemRemoved"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/btnRemoveBottomNotifyItemRemoved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Remove Bottom NotifyItemRemoved"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/btnRemoveAboveBottomNotifyItemRemoved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="Remove Above Bottom NotifyItemRemoved"
                android:textColor="@android:color/white"/>
            <Button
                android:id="@+id/btnNotifyItemMoved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:text="NotifyItemMoved 0=>5"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>